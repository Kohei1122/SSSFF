<div class="main users-new">
  <div class="container">
    <div class="form-heading"><h2>Add Service</h2></div>
    <div class="form users-form">
      <div class="form-body">
        <% @facility.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        
        <%= form_tag("/facility/create") do %>
          <p>Name</p>
          <input name="name" value="<%= @facility.name %>">
          <p>Type</p>
          <input name="url" value="<%= @facility.url %>">
          <p>Description</p>
          <input name="description" value="<%= @facility.description %>">
          <br>
          <input type="submit" value="Add">
        <% end %>
      </div>
    </div>
  </div>
</div>